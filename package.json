{
  "name": "stac-extensions",
  "version": "0.0.0",
  "scripts": {
    "test": "npm run check-markdown && npm run check-examples && jest",
    "check-markdown": "remark . -f -r .github/remark.yaml",
    "check-examples": "stac-node-validator . --lint --verbose --schemaMap https://stac-extensions.github.io/stats/v0.2.0-dev/schema.json=./json-schema/schema.json",
    "format-examples": "stac-node-validator . --format --schemaMap https://stac-extensions.github.io/stats/v0.2.0-dev/schema.json=./json-schema/schema.json"
  },
  "dependencies": {
    "remark-cli": "^10.0.1",
    "remark-lint": "^9.1.1",
    "remark-lint-no-html": "^3.1.1",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-validate-links": "^11.0.2",
    "stac-node-validator": "^1.2.2"
  },
  "devDependencies": {
    "eslint": "^8.21.0",
    "eslint-config-planet": "^20.0.3",
    "jest": "^28.1.3"
  },
  "eslintConfig": {
    "extends": "planet",
    "env": {
      "jest": true
    }
  }
}
